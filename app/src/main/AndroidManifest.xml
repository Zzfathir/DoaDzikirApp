<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.fathirdev.doadzikirapp">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/ic_splash"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_splash"
        android:supportsRtl="true"
        android:theme="@style/Theme.DoaDzikirApp"
        tools:targetApi="31">
        <activity
            android:name=".presentation.pagipetang.PetangActivity"
            android:theme="@style/Theme.App.DzikirPetang"
            android:exported="false" />
        <activity
            android:name=".presentation.pagipetang.PagiActivity"
            android:theme="@style/Theme.App.DzikirPagi"
            android:exported="false" />
        <activity
            android:name=".presentation.pagipetang.PagiPetangDzikirActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.HarianDzikirDoaActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.SetiapSaatDzikirActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.QauliyahSholatActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.App.SplashScreenBase">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>